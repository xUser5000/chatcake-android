<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/members_list_item_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:text="Abdallah Ahmed"
        android:layout_gravity="center"
        android:textColor="@android:color/black"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <ImageButton
            android:id="@+id/members_list_item_delete_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_blue_grey_800_24dp"
            android:background="@android:color/transparent"
            android:contentDescription="Delete Icon"
            android:layout_centerInParent="true"/>

        <ProgressBar
            android:id="@+id/members_list_item_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:visibility="invisible"/>

    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!-- Labels -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:orientation="vertical">

        <!-- Name -->
        <TextView
            android:id="@+id/search_list_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>

        <!-- Username -->
        <TextView
            android:id="@+id/search_list_item_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- Add / Remove button -->
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <!-- Add member button -->
        <Button
            android:id="@+id/search_list_item_add_member_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/add_member_primary_button"
            android:textColor="@android:color/white"
            android:text="Add"
            android:visibility="invisible"/>

        <!-- State label -->
        <TextView
            android:textColor="#888"
            android:id="@+id/search_list_item_state_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Added"/>

    </RelativeLayout>

</LinearLayout>